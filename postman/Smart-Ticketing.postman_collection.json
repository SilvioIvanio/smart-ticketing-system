    {
      "name": "4) Create trip",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"routeId\": \"{{routeId}}\",\n  \"startTime\": \"2025-10-05T08:00:00Z\",\n  \"endTime\": \"2025-10-05T09:00:00Z\"\n}"
        },
        "url": {
          "raw": "{{transport_base}}/trips",
          "host": [
            "{{transport_base}}"
          ],
          "path": [
            "trips"
          ]
        }
      },
      "response": []
    },
    {
      "name": "5) Create ticket (triggers payment via Kafka)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-user-id",
            "value": "{{userId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"SINGLE\",\n  \"tripId\": \"{{tripId}}\",\n  \"price\": 10.0,\n  \"currency\": \"NAD\"\n}"
        },
        "url": {
          "raw": "{{ticketing_base}}/tickets",
          "host": [
            "{{ticketing_base}}"
          ],
          "path": [
            "tickets"
          ]
        }
      },
      "response": []
    },
    {
      "name": "6) Get ticket (check status)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{ticketing_base}}/tickets/{{ticketId}}",
          "host": [
            "{{ticketing_base}}"
          ],
          "path": [
            "tickets",
            "{{ticketId}}"
          ]
        }
      },
      "response": []
    },
    {
